{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist/electron",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "electron/**/*.ts",
    "e2e/**/*.ts",
    "playwright.config.ts",
    "vite.config.ts"
  ]
}
